    <version>
      <id>1.2.0</id>
      <name>1.2.0</name>
      <tag>STRUTS_1_2_0</tag>
    </version>
    <version>
      <id>1.2.1</id>
      <name>1.2.1</name>
      <tag>STRUTS_1_2_1</tag>
    </version>
    <version>
      <id>1.2.2</id>
      <name>1.2.2</name>
      <tag>STRUTS_1_2_2</tag>
    </version>
    <version>
      <id>1.2.3</id>
      <name>1.2.3</name>
      <tag>STRUTS_1_2_3</tag>
    </version>
    <version>
