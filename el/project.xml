        <exclude>**/*.java</exclude>
      </excludes>
    </unitTest>
    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <resource>
        <directory>src/tld</directory>
        <includes>
          <include>**/*.tld</include>
        </includes>
        <targetPath>META-INF/tlds</targetPath>
      </resource>
      <resource>
        <directory>build</directory>
        <includes>
